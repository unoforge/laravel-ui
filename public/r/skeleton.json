{
    "$schema": "https://raw.githubusercontent.com/unoforge/cli/main/registry-item.json",
    "version": "1.0.0",
    "name": "skeleton",
    "type": "registry:component",
    "title": "Skeleton",
    "description": "A reusable skeleton component for Laravel Blade/Livewire.",
    "files": [
        {
            "path": "resources/views/components/ui/skeleton.blade.php",
            "type": "registry:component",
            "target": "resources/views/components/ui/skeleton.blade.php",
            "content": "@props(['radiusNonde' => false, 'class' => '', 'bgNone' => false])\n\n@php\n    $bgClass = $bgNone ? '' : 'bg-bg-surface-elevated';\n    $sk_radius = $radiusNone ? '' : 'rounded-full';\n    $className = \"animate-pulse {$bgClass} {$sk_radius} {$class}\";\n@endphp\n\n<div {{ $attributes->merge([\n    'class' => $className,\n]) }}></div>\n"
        }
    ]
}